<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="My Profile"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="#FFF"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"/>
    <TextView
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_width="200dp"
        android:lines="3"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-medium"
        android:text="NIM : 00000026766 \nName : James Leopold\nKelas : EL"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="left"
        android:text="  Reference : "
        android:textSize="15dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textSize="15dp"
        android:gravity="left"
        android:text="Stack Overflow :https://stackoverflow.com/questions/24885223/why-doesnt-recyclerview-have-onitemclicklistener"
        android:textColor="#fff"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textSize="15dp"
        android:gravity="left"
        android:text="Api : https://developer.android.com/training/basics/firstapp/starting-activity"
        android:textColor="#fff"
        android:fontFamily="sans-serif-medium"/>





</LinearLayout>